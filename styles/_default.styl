body
  font-family text-font
  font-size: 14px
  background: background-color

.header
  background rgba(255,255,255,0.6)
  padding 1em 1em 0
  clearfix()

.main-image
  background-image url('../images/fdr.jpg')
  height 420px
  width 100%
  background-size cover

.icon
  width 60px
  height 60px
  background-color accent-1
  color #fff
  border-radius 60px
  font-size 67px
  font-weight 100
  font-style italic
  line-height 0.7
  text-indent 11px
  float left

.logo
  float left
  a
    color light-text
    text-decoration none
    font-weight 100
    font-style italic

//Nav
menu
  position relative
  float right
.nav
  li
    display inline-block
    margin-right: 1em
    text-align center
    &.active
      &:before
        position absolute
        width 8px
        height 8px
        background accent-2
        content " "
        border-radius 8px
        margin-left -4px
        top 6px
      a
        text-align center
        font-weight 500
        color accent-2
  a
    display block
    color light-text
    text-decoration none
    font-weight 200
    transition color 300ms
    &:hover
      color accent-2
